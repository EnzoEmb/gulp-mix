{
  "build_folder": "./build",
  "src_folder": "./src",
  "assets_folder": "./src/assets",
  "url": "http://gulp-mix.test/",
  "port": 3000,
  "autoreload": true,
  "autoopen": true,

  "minify_html": false,
  "minify_js": true,
  "minify_css": true,
  "cache_bust": true,
  "purge_css": false,
  "autoprefix_css": true,

  "js_bundles": {
    "vendor": [
      "src/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"
    ]
  },
  "css_bundles": {
    "style": [
      "src/vendor/normalize.css/normalize.css",
      "src/assets/css/style.css"
    ]
  }
}